@model FilteredPlaylistsViewModel
@*@inject UserManager<User> UserManager
    @inject SignInManager<User> SignInManager*@

@{
    ViewData["Title"] = "The playlists created by all our users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Playlists</h1>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Msg"].ToString();
    </div>
}

<form action="/action_page.php">
    <div>
        <label>Search:</label>
        <input type="text" id="name" asp-for="FilterCriteria.Name"><br><br>
    </div>
    <div>
        <label>Include:</label>
        <br />
        @foreach (var item in Model.AllGenres)
        {
            <span>
                <label>@item.Name</label>
                <input type="checkbox" id=@item.Id name=GenresNames>
                <br />
            </span>
        }
    </div>
    <div>
        <label for="customRange1">Filter playlists by duration</label>
        <input type="range" class="custom-range" id="customRange1" asp-for="FilterCriteria.DurationLimits">
    </div>
    <input type="submit" value="Submit">
</form>

<div class="container-about">
    <div class="container">
        <div class="page-header" id="about">
            <h2 class="text-center text-danger">Our playlists</h2>
            <br />
        </div>
        <div class="row">
            @foreach (var playlist in Model.Playlists)
            {
                <partial name="_PlaylistPartial" model="playlist" />
            }
        </div>
    </div>
</div>

