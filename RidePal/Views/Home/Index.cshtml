@model HomeViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}
<!--Carousel-->
<div class="container-fluid px-0">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/img/travel_1.jpg" alt="First slide">
                <div class="carousel-caption justify-content-center">
                    <div class="col-10 mx-auto text-center">
                        <h3 class="mbr-fonts-style display-1">Enjoy</h3>
                        <h5>your favorite tracks on vecation.</h5>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/img/travel_2.jpg" alt="Second slide">
                <div class="carousel-caption justify-content-center">
                    <div class="col-10 mx-auto text-center">
                        <h3 class="mbr-fonts-style display-1">Pass</h3>
                        <h5>the time while waiting.</h5>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/img/travel_3.jpg" alt="Third slide">
                <div class="carousel-caption justify-content-center">
                    <div class="col-10 mx-auto text-center">
                        <h3 class="mbr-fonts-style display-1">Pick</h3>
                        <h5>a start and an end point and create your own playlist.</h5>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!--top playlists-->
<div class="container-about">
    <div class="container">
        <div class="page-header" id="about">
            <h2 class="text-center text-danger">Top playlists</h2>
            <br />
        </div>
        <div class="row">
            @foreach (var playlist in Model.TopPlaylists)
            {
                <partial name="_PlaylistPartial" model="playlist"/>
            }
        </div>
    </div>
</div>

<!--featured artists-->
<div class="container-about">
    <div class="container">
        <div class="page-header" id="about">
            <h2 class="text-center text-danger">Featured artists</h2>
            <br />
        </div>
        <div class="row">
            @foreach (var artist in Model.FeaturedArtists)
            {
                <div class="col-md-4 text-center">
                    <img class="img-responsive" style="border-radius:50%; width:250px; height:250px;" src="@artist.ArtistPictureURL" />
                    <h3 class="text-danger">@artist.ArtistName</h3>
                    <br />
                </div>
            }
        </div>
    </div>
</div>

<!--Statistics-->
<div class="counter">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="tracks">
                    <p class="counter-count">@Model.TrackCount</p>
                    <p class="employee-p">Tracks</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="artists">
                    <p class="counter-count">@Model.ArtistCount</p>
                    <p class="customer-p">Artists</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="playlists">
                    <p class="counter-count">@Model.PlaylistCount</p>
                    <p class="design-p">Playlists</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="users">
                    <p class="counter-count">@Model.UserCount</p>
                    <p class="order-p">Users</p>
                </div>
            </div>
        </div>
    </div>
</div>