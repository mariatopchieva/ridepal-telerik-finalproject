<div class="container-fluid px-0">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/img/travel_1.jpg" alt="First slide">
                <div class="carousel-caption justify-content-center">
                    <div class="col-10 mx-auto text-center">
                        <h3 class="mbr-fonts-style display-1">Enjoy</h3>
                        <h5>your favorite tracks on vecation.</h5>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/img/travel_2.jpg" alt="Second slide">
                <div class="carousel-caption justify-content-center">
                    <div class="col-10 mx-auto text-center">
                        <h3 class="mbr-fonts-style display-1">Pass</h3>
                        <h5>the time while waiting.</h5>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/img/travel_3.jpg" alt="Third slide">
                <div class="carousel-caption justify-content-center">
                    <div class="col-10 mx-auto text-center">
                        <h3 class="mbr-fonts-style display-1">Pick</h3>
                        <h5>a start and an end point and create your own playlist.</h5>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

